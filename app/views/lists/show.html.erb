<h1><%= @list.name %></h1>

<p>Add a task</p>
<input type="text" data-list-id="<%= @list.id %>">

<ul class="task-list">
  <% @list.tasks.each do |task| %>
    <li class="task <%= if task.completed? then 'complete' else '' end %>" data-task-id="<%= task.id %>">
      <%= task.content %>
      <%= button_to "delete", [@list, task], method: :delete, data: { confirm: 'Are you sure you want to delete this task?'} %>
    </li>
  <% end %>
</ul>

